{
	"compilerOptions": {
		"lib": [
			"ES2020.Promise",
			"ESNext"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ESNext",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"declaration": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"@common/*": ["common/*"],
			"@v1/*": ["v1/*"],
			"@v2/*": ["v2/*"]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}